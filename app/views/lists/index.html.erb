<div class="container">
<div class="banner">
</div>
  <h2>List all</h1>
  <%= link_to "Create new list", new_list_path, class: "btn btn-danger"%>
  <ul>
  <% @lists.each do |list| %>
    <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key)%>)">
    <li><%= link_to list.name, list_path(list) %></li>
    </div>
  <% end %>
  </ul>
</div>
